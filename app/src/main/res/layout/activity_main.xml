<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salinas.britocajero.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorIndigoDarkPrimaryColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido al Cajero Automatico"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:id="@+id/img_load"
            android:layout_alignParentRight="true"
            android:src="@drawable/frame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
             />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d6a35f"
        android:id="@+id/bt_ingresar_tarjeta"
        android:backgroundTint="#d6a35f"
        android:text="INGRESAR TARJETA"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:elevation="4dp"
        />
</LinearLayout>

</LinearLayout>
